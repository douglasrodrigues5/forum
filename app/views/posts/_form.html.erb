<%= form_for(current_user.posts.build) do |f| %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :content %>
    <%= f.text_area :content %>
  </div>
<%= f.hidden_field :user_id, :value => current_user.id%>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
