<%= form_for([@post, @post.comments.new]) do |f| %>
  <p>
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
  <% Comment.all.each do |commnt| %>
      <% if commnt.id == comment.id %>
          <%= f.hidden_field :parent_id, value: comment.id %>
      <% end %>
    <% end %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
