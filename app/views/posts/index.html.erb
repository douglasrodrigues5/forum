
<h1>Posts</h1>

    <% @posts.each do |post| %>
        <div class="col-sm-12 col-xs-12 col-md-12 col-lg-12 post">
        <%= post.title %>
        <%= post.content %>
        <%= post.user.email %>
        <%= link_to 'Show', post %>
        <% if user_signed_in? %>
        <% if current_user.id == post.user.id %>
        <%= link_to 'Edit', edit_post_path(post) %>
        <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
        <% end %>
        </div>
    <% end %>

    </div>
<br>
