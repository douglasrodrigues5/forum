    <% @posts.each do |post| %>
        <div class="col-sm-12 col-xs-12 col-md-12 col-lg-12 post">
        <h2 class="post<%= post.id %>"> <%= link_to post.title, post %> </h2> 
        <%= post.content %>
        <p> Posted by: <strong><%= post.user.email %></strong></p>
        <% if user_signed_in? %>
        <% if current_user.id == post.user.id %>
        <%= link_to 'Edit', edit_post_path(post) %>
        <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
        <% end %>
        </div>
    <% end %>

<br>
