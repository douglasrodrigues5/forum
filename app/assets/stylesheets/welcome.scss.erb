.container-fluid{
  padding:0;
}
.row{
  margin:0;
}
.main-form{
  background: no-repeat;
  background-image: url(<%= asset_path 'sidebar_bg.jpg' %>);
  background-size: auto 100%;
  color: rgb(236, 236, 236);
}

.post-sec{
  background-color: #004D40;
  padding-top: 20px;
        overflow-y: scroll;
}
::-webkit-scrollbar {
    width: 5px;
    height: 10px;
}

::-webkit-scrollbar-thumb {

    background: rgba(17, 14, 14, 0.69);
    border-radius: 10px;
}


.fill{
    width:100%;
    height:100%;
    min-height:100%;

}
.input-field, .input-field:focus{
  border-radius: 0;
  border: 1.5px solid rgb(227, 227, 227);
  background-color: rgba(42, 42, 42, 0.55);
  color: #fff !important;
  font-family: 'Alegreya Sans', sans-serif;
  font-weight: 400;
}

.header-text{
  margin-top: 10%;
  font-size: 2em;
  font-family: 'Alegreya Sans', sans-serif;
  font-weight: 300;
}
.navbar-inverse{
  background-color: rgb(20, 19, 13) !important;
}
form{
  margin-top: 30px;
}
.header-sub{
  color: rgba(217, 217, 217, 0.74);
  font-weight: 300;
}